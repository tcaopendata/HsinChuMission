        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="開啟任務卷軸"
        android:layout_marginBottom="17dp"
        android:id="@+id/button_m1_choose_task"
