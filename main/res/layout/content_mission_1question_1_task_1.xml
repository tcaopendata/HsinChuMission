     <TextView
         android:text="Ｑ：光線在玻璃中的行進速度比空氣中快還是慢"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="true"

         android:layout_marginTop="10dp"
         android:textSize="30sp"
         android:id="@+id/textView8"
         />

     <TextView
         android:text="Ａ："
         android:textSize="30sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_alignParentStart="true"
         android:layout_below="@+id/textView8"
         android:id="@+id/textView9"
         />

     <CheckBox
         android:text="比較慢"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignStart="@+id/checkbox_m1_t1_c1"
         android:id="@+id/checkbox_m1_t1_c2"
         android:textSize="22sp"
         android:layout_below="@+id/checkbox_m1_t1_c1" />

     <Button
         android:text="送出答案"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_marginStart="18dp"
         android:layout_marginBottom="17dp"
         android:id="@+id/butten_m1_t1_SendAns" />

     <Button
         android:text="求救"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginEnd="22dp"
         android:id="@+id/butten_m1_t1_help"
         android:layout_alignBaseline="@+id/butten_m1_t1_SendAns"
         android:layout_alignBottom="@+id/butten_m1_t1_SendAns"
         android:layout_alignParentEnd="true" />

     <CheckBox
         android:text="比較快"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="36dp"
         android:layout_marginTop="17dp"
         android:textSize="22sp"
         android:id="@+id/checkbox_m1_t1_c1"
         android:layout_below="@+id/textView9"
         android:layout_alignStart="@+id/butten_m1_t1_SendAns" />
