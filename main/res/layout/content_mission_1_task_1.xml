<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_mission_1_task_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="studio.su.austin.hsinchumission.mission_1_task_1"
    tools:showIn="@layout/activity_mission_1_task_1">

    <TextView
        android:text="      問題一      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="40sp"
        android:id="@+id/textView6" />

    <Button
        android:text="生活"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_m1_task3"
        android:layout_alignEnd="@+id/button_m1_task2"
        android:id="@+id/button_m1_task4" />

    <Button
        android:text="文史"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_m1_task2"
        android:layout_above="@+id/button_m1_task3"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="自然"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:id="@+id/button_m1_task1"
        android:layout_below="@+id/textView6"
        android:layout_toStartOf="@+id/button_m1_task2"
        android:layout_marginEnd="21dp" />

    <Button
        android:text="藝術"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/button_m1_task3"
        android:layout_below="@+id/button_m1_task1"
        android:layout_alignStart="@+id/button_m1_task1" />
</RelativeLayout>
